@{
    ViewBag.Title = "职位类型管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  @using CMS.Domain  @using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<CMS.Domain.JobType>
 <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.easyui.min.js")"></script>
<link type="text/css" href="../../Content/css/styletable.css" rel="stylesheet" />
<link type="text/css" href="../../Content/css/pager.css" rel="stylesheet" />
<script type="text/javascript" src="../../Scripts/page/jobtype.js"></script>
<script type="text/javascript" src="../../Scripts/page/job.nav.js"></script>
@section submenu{
    <ul>
        <li><h3><a href="#" class="house">招聘管理</a></h3>
            <ul>
             <li id="rim"><a href="#" class="manage">应聘信息管理</a>
                    <ul >
                    <li><a href="@Url.Action("Index", "Job")" class="report" style="">全部信息</a></li>
                    <li><a href="/job/index/15" class="report" style="">自荐类型</a></li>
                    </ul>
                </li>
              <li><a href="@Url.Action("Recruitment", "Job")" class="report">招聘信息管理</a></li>
                <li><a href="@Url.Action("Position", "Job")" class="report">发布招聘信息</a></li>
                <li><a href="@Url.Action("JobTypeList", "Job")" class="report">职位类型管理</a></li> 
            </ul>
        </li>
	</ul>
}


<div id="content">
    <div id="box">
        <h3>职位类型管理</h3>
        <div style="margin:5px;"><a href="javascript:void(0);" onclick="AddType();"><img src="@Url.Content("~/Content/img/icons/add.png")" style="vertical-align:middle;" width="16" height="16" align="middle" />添加类型信息</a></div>
          <table width="100%">
			<thead>
				<tr>
                    <th width="5%"><a href="#">ID</a></th>
                    <th width="8%"><a href="#">类型名称</a></th>
                    <th width="20%"><a href="#">描述</a></th>
                    <th width="5%"><a href="#">操作</a></th>
                </tr>
			</thead>
			<tbody align="center">
            @foreach (JobType info in Model)
            {
            <tr>
            <td>@info.ID</td>
            <td>@info.Name</td>
            <td>@info.Description</td>
            <td><a href="javascript:void(0)" onclick="EditInit(@info.ID)"><img src="@Url.Content("~/Content/img/edit.png")" alt="修改" title="修改" width="16" height="16" />
            </a>  
            <a href="javascript:void(0);" onclick="DelType(@info.ID)"><img src="@Url.Content("~/Content/img/cancel.png")" alt="删除" title="删除" width="16" height="16" />
            </a></td>
            </tr>
                  }
            </tbody>
            </table>
         <div id="pager" style="text-align:center">
           @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "id", CurrentPagerItemWrapperFormatString = "<span class=\"cpb\">{0}</span>", NumericPagerItemWrapperFormatString = "<span class=\"item\">{0}</span>", CssClass = "pages", SeparatorHtml = "" })
        </div>
</div>
</div>

<div id="divDialog" style="display:none; width:400px;">
       <table>
       <tr><td style="width:60px;">类型名称：</td><td>
       <input type="text" name="typeName" id="typeName" />&nbsp;&nbsp;<span id="typeNameMsg"></span>
       </td></tr>
      
       <tr><td>类型描述：</td><td>
       <textarea cols="16" rows="5" name="typeDesc" id="typeDesc"></textarea>&nbsp;&nbsp;<span id="typeDescMsg"></span>
       </td></tr>
       <tr><td colspan="2" align="center" style="color:Red"><span id="LastMsg"></span></td></tr>
       </table>
</div>                                                        

