@{
    ViewBag.Title = "添加全局变量";
}
@model CMS.Domain.GlobalVariable
<link href="/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css"/>
<link href="/Content/themes/base/jquery.ui.dialog.css" rel="stylesheet" type="text/css"/>
<link href="/Content/css/table.css" rel="stylesheet" type="text/css" />
@section submenu{
     <ul>
        <li><h3><a href="@Url.Action("Index", "Template")" class="house">模板管理</a></h3>
            <ul>
                <li><a href="@Url.Action("Index", "Global")" class="pagenew">全局变量管理</a></li>
                <li><a href="@Url.Action("Index", "DataBlock")" class="manage">数据块管理</a></li>
            </ul>
        </li>
	</ul>   
}
<div id="content">
    <div id="box">
        <h3>添加全局变量</h3>
   @using (Html.BeginForm("Create", "Global", FormMethod.Post, new Dictionary<string, object>() { { "id", "frmAdd" } }))
   {
    <table width="100%">
        <tbody>
			<tr>
                <td class="a-right" style="width:80px;">变量名称：</td>
                <td>@Html.TextBoxFor(m => m.GlobalName, new Dictionary<string, object>() { { "id", "txtGlobalName" }, { "name", "GlobalName" }, { "tabindex", "1" }, { "style", "width:300px;" } })</td>
                <td style="width:100px;">@Html.ValidationMessageFor(m => m.GlobalName)</td>
            </tr>
            <tr>
                <td class="a-right">英文名称：</td>
                <td>@Html.TextBoxFor(m => m.EnName, new Dictionary<string, object>() { { "id", "txtEnName" }, { "name", "EnName" }, { "tabindex", "2" }, { "style", "width:300px;" } })
                </td>
                <td>@Html.ValidationMessageFor(m => m.EnName)</td>
            </tr>
            <tr>
                <td class="a-right">变量内容：</td>
                <td colspan="2">
                    <table width="100%">
			        <tbody>
                    <tr>
                        <td width="33%"><img src="@Url.Content("~/Content/img/icons/bricks_gear.png")" title="选择系统变量" alt="选择系统变量" style="vertical-align:middle;margin-right:2px;" width="16" height="16" align="middle" /><a href="javascript:void(0);" id="aSelSystemVar" title="选择系统变量"><b>选择系统变量</b></a></td>
                        <td width="33%"></td>
                        <td width="33%"></td>
                    </tr>
                    <tr>
                        <td colspan="3">
                             @Html.TextAreaFor(m => m.Content, new Dictionary<string, object>() { { "id", "fckContent" }, { "name", "Content" }, { "cols", "60" }, { "rows", "10" } })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            @Html.ValidationMessageFor(m => m.Content)
                        </td>
                    </tr>
                    </tbody>
                </table>
                </td>
            </tr>
            <tr>
                <td class="a-right"></td>
                <td>@Html.CheckBoxFor(m => m.IsInclude, new Dictionary<string, object>() { { "id", "chbIsInclude" }, { "name", "IsInclude" }, { "tabindex", "4" } })自动更新</td>
                <td></td>
            </tr>
            <tr id="trFileCode" style="display:none;">
                <td class="a-right">文件编码：</td>
                <td><select id="selFileENCode"><option value="UTF-8">UTF-8</option><option value="GB2312">简体中文</option></select></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td height="25" colspan="2"><button type="button" name="btnPost" id="btnSave"> 提 交 </button> &nbsp;&nbsp;&nbsp;<button type="reset" name="btnReset"> 重 置 </button></td>
            </tr>
		</tbody>
    </table>
   }
   </div>
</div>
<script src="/Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
<script type="text/javascript" src="/content/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/scripts/page/page.common.js"></script>
<script type="text/javascript" src="/scripts/page/global.page.add.js"></script>
