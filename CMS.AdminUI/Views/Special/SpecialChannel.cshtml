@using CMS.Domain
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>专题栏目</title>
    <link href="@Url.Content("~/Content/css/admin_theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/themes/base/jquery.ui.dialog.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/css/table.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div id="box" style="background-color:#fff;">
    <h3>专题栏目</h3>
    <div style="margin:5px;"><a href="javascript:void(0);" id="aAddChannel"><img src="@Url.Content("~/Content/img/edit_add.png")" style="vertical-align:middle;" width="16" height="16" align="middle" />添加栏目</a></div>
    <table width="100%">
		<thead>
			<tr style="height:22px;">
                <th width="50px"><a href="javascript:void(0);">栏目ID</a></th>
                <th width="100px"><a href="javascript:void(0);">栏目名称</a></th>
                <th width="100px"><a href="javascript:void(0);">栏目URL</a></th>
                <th width="120px"><a href="javascript:void(0);">创建时间</a></th>
                <th width="60px"><a href="javascript:void(0);">操作</a></th>
            </tr>
		</thead>
		<tbody id="tbodyContent">

		</tbody>
	</table>
    <div id="divPagination" class="pagination"></div>
    <div id="divDialog" style="display:none;">
        @using (Html.BeginForm("SpecialChannelAdd", "Spiecial", FormMethod.Post, new Dictionary<string, object>() { { "id", "frmAdd" } }))
       {
    <table width="100%">
        <tbody>
			<tr>
                <td class="a-right" style="width:80px;">栏目名称：</td>
                <td>@Html.TextBoxFor(m => new SpecialChannel().SubSpecialName, new Dictionary<string, object>() { { "id", "txtSubSpecialName" }, { "name", "SubSpecialName" }, { "tabindex", "1" }, { "class", "input-txt" } })</td>
            </tr>
            <tr>
                <td class="a-right">栏目URL：</td>
                <td>@Html.TextBoxFor(m => new SpecialChannel().Url, new Dictionary<string, object>() { { "id", "txtUrl" }, { "name", "Url" }, { "tabindex", "2" }, { "class", "input-txt" } })</td>
            </tr>
            <tr>
                <td align="right">模   板：<input type="hidden" id="hiddenTemplateID" name="TemplateID" value="0"/></td>
                <td width="250"><input type="text" id="txtTemplateName" name="txtTemplateName" class="input-txt"/>&nbsp;<img src="/content/img/icons/select.png" style="vertical-align:middle;height:20px;cursor:pointer" id="selTemplate" title="选择模板" alt="选择模板" /></td>
            </tr>
		</tbody>
    </table>
       }
    </div>
    <script type="text/javascript">
        var SpecialID=@ViewBag.SpecialID;
    </script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="/Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.tmpl.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.pagination.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.dateformat.js" type="text/javascript"></script>
    <script src="/scripts/page/page.common.js" type="text/javascript"></script>
    <!--jQuery Template-->
    <script id="listTemplate" type="text/html">
        <tr>
            <td class="a-center">${ID}</td>
            <td>${SubSpecialName}</td>
            <td>${Url}</td>
            <td>${GetDate(CreateTiem)}</td>
            <td align="center">                
                <a href="javascript:void(0);" onclick="EditInit('${ID}');"><img src="@Url.Content("~/Content/img/icons/page_white_edit.png")" title="修改" alt="修改" width="16" height="16" /></a>
                <a href="javascript:void(0);" onclick="DeleteSpecialChannel('${ID}');"><img src="@Url.Content("~/Content/img/icons/page_white_delete.png")" title="删除" alt="删除" width="16" height="16" /></a>
            </td>
        </tr>
    </script>
    <script src="/Scripts/page/specialchannel.page.js" type="text/javascript"></script>
</div>
</body>
</html>